<div class="container">
  <div class="row">
    <div class="col-xs-4 col-xs-offset-4">
      <h3>新規登録（生徒）</h3>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "students/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :姓 %>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "姓", placeholder: "田中" %>
        </div>

        <div class="field">
          <%= f.label :名 %>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "名", placeholder: "次郎" %>
        </div>

        <div class="field">
          <%= f.label :セイ %>
          <%= f.text_field :sub_last_name, autofocus: true, autocomplete: 'セイ', placeholder: "タナカ" %>
        </div>

        <div class="field">
          <%= f.label :メイ %>
          <%= f.text_field :sub_first_name, autofocus: true, autocomplete: 'メイ', placeholder: "ジロウ" %>
        </div>

        <div class="field">
          <%= f.label :コース %>
          <p class="h4"><%= f.collection_select :course_id, Course.all, :id, :name, :include_blank => "選択して下さい" %></p>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上の英数字)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :パスワード再入力 %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "登録", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>

      <%= render "students/shared/links" %>
    </div>
  </div>
</div>
