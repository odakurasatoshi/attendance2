<div class="container">
	<div class="row">
		<div class="col-xs-5">
			<h1>生徒マイページ</h1>
				<% if flash[:success] %>
		  			<p class="alert alert-success" role="alert"><%= flash[:success] %></p>
				<% end %>
				<table class="table">
					<tr>
						<th>氏名</th>
						<td><%= @student.last_name %><%= @student.first_name %></td>
					</tr>
					<tr>
						<th>シメイ</th>
						<td><%= @student.sub_last_name %><%= @student.sub_first_name %></td>
					</tr>
					<tr>
						<th>メールアドレス</th>
						<td><%= @student.email %></td>
					</tr>
					<tr>
						<th>コース</th>
						<td><%= @student.course&.name %></td>
					</tr>
				</table>

				<%= link_to "編集する",  edit_student_path(@student.id), class: "btn btn-primary" %>
				<%= link_to "出席履歴一覧", students_attendees_path, class: "btn btn-primary" %>
				<%= link_to "コース変更依頼", students_request_path(@student.id), class: "btn btn-danger" %>
		</div>
		<div class="col-xs-3">
			<h3>出席カレンダー</h3>
				<%= month_calendar events: @attendees do |date,attendees| %>
					<%= date.day %>
					<% attendees.each do |attendee| %>
						<%= image_tag 'tigre.png', :size => '40x40' %>
					<% end %>
				<% end %>
		</div>
	</div>
</div>