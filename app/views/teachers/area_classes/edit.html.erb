<div class="container">
	<div class="row">
		<h3>クラス編集</h3>
			<%= form_for [:teachers,@area_class] do |f| %>
				<% if @area_class.errors.any? %>
					<h4 class="message-error"><%= @area_class.errors.count %> 件のエラーのため内容は保存できません。</h4>
						<ul>
							<% @area_class.errors.full_messages.each do |message| %>
								<li><%= message %></li>
							<% end %>
						</ul>
				<% end %>
				<%= f.label :クラス %>
				<%= f.text_field :name %>
				<%= f.submit '変更を保存する', class: "btn btn-primary"%>
				<%= link_to "戻る", teachers_area_classes_path, class: "btn btn-primary" %>
			<% end %>
	</div>
</div>