<div class="container">
	<div class="row">
		<h3>ジャンル編集</h3>
			<%= form_for [:teachers,@genre] do |f| %>
				<% if @genre.errors.any? %>
					<h4 class="message-error"><%= @genre.errors.count %> 件のエラーのため内容は保存できません。</h4>
						<ul>
							<% @genre.errors.full_messages.each do |message| %>
								<li><%= message %></li>
							<% end %>
						</ul>
				<% end %>
				<%= f.label :ジャンル %>
				<%= f.text_field :name %>
				<%= f.submit '変更を保存する', class: "btn btn-primary"%>
			<% end %>
	</div>
</div>